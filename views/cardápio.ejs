<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menufast</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/index.css">
  </head>

  <body>
    <header class="cardapio-header">
      <div>
        <h1>Cardapio</h1>
        <button>Chamar gar√ßom</button>
      </div>
      <nav class="cardapio-menu">
        <ul>
          <% restaurante.categorias.forEach(categoria => { %>
            <l1><%= categoria.nome %></l1>
          <% }) %>
        </ul>
      </nav>
    </header>
    <main class="container-cardapio">
      <% restaurante.categorias.forEach(categoria => { %>
        <h1><%= categoria.nome %></h1>
        <div class="cardapio">
          <% categoria.subCategorias.forEach(subCategoria => { %>
            <h2><%= subCategoria.nome %></h2>
            <% subCategoria.items.forEach(item => { %>
              <div class="article">
                <span class="item">
                  <span><%= item.nome %></span>
                  <% if (item.observacao) { %>
                    <span class="obs"><%= item.observacao %></span>
                  <% } %>
                </span>
                <span class="dots"></span>
                <span class="price">
                  <span class="rs">R$</span>
                  <%= item.preco %>
                </span>
              </div>
            <% }) %>
          <% }) %>
        </div>
      <% }) %>
    </main>
    <script>
      document.getElementsByClassName("cardapio").array.forEach(cardapio => {
        cardapio.style.height = `${cardapio.clientHeight / 2}px`
      })
    </script>
  </body>
</html>
